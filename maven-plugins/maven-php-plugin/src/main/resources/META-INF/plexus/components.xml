<component-set>
    <components>
        <component>
            <role>
                org.apache.maven.lifecycle.mapping.LifecycleMapping
            </role>
            <role-hint>php</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <phases>
                	<validate>
                		org.phpmaven:maven-php-plugin:set-sources
                	</validate>
                	<pre-site>
                		org.phpmaven:maven-php-plugin:set-sources
                	</pre-site>
                    <generate-resources>
                        org.apache.maven.plugins:maven-plugin-plugin:descriptor,
                        org.phpmaven:maven-php-plugin:extractDependencies
                    </generate-resources>
                    <process-resources>
                        org.apache.maven.plugins:maven-resources-plugin:resources,
                        org.phpmaven:maven-php-plugin:resources
                    </process-resources>
                    <generate-test-resources>
                        org.phpmaven:maven-php-plugin:extractTestDependencies
                    </generate-test-resources>
                    <process-test-resources>
                        org.apache.maven.plugins:maven-resources-plugin:testResources,
                        org.phpmaven:maven-php-plugin:testResources
                    </process-test-resources>
                    <test>
                        org.phpmaven:maven-php-plugin:test
                    </test>
                    <package>
                        org.phpmaven:maven-php-plugin:phar,
                        org.apache.maven.plugins:maven-plugin-plugin:addPluginArtifactMetadata
                    </package>
                    <!-- <install>
                        org.apache.maven.plugins:maven-install-plugin:install,
                        org.apache.maven.plugins:maven-plugin-plugin:updateRegistry
                    </install> --><!-- TODO Does not work at the moment. NoClassDefFoundError beause it seems not to load maven-plugin-registry, seem to be an invalid dependency problem -->
                    <install>
                        org.apache.maven.plugins:maven-install-plugin:install
                    </install>
                    <deploy>
                        org.apache.maven.plugins:maven-deploy-plugin:deploy
                    </deploy>
                </phases>
            </configuration>
        </component>
        <component>
            <role>
                org.apache.maven.artifact.handler.ArtifactHandler
            </role>
            <role-hint>php</role-hint>
            <implementation>
                org.apache.maven.artifact.handler.DefaultArtifactHandler
            </implementation>
            <configuration>
                <type>php</type>
                <extension>phar</extension>
                <language>php</language>
                <addedToClasspath>true</addedToClasspath>
            </configuration>
        </component>
        
        
        
        
        <!-- PEAR package -->
  		<component>
  			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
  			<role-hint>pear</role-hint>
  			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
  			<configuration>
  				<phases>
  					<process-resources>
  						org.apache.maven.plugins:maven-resources-plugin:resources,
  						org.phpmaven:maven-php-plugin:process-resources-pear
  					</process-resources>
  					<process-test-resources>
  						org.apache.maven.plugins:maven-resources-plugin:testResources,
  						org.phpmaven:maven-php-plugin:process-test-resources-pear
  					</process-test-resources>
  					<test>
  						org.phpmaven:maven-php-plugin:test-pear
  					</test>
  					<package>
  						org.phpmaven:maven-php-plugin:phar
  					</package>
  					<install>
  						org.apache.maven.plugins:maven-install-plugin:install
  					</install>
  					<deploy>
  						org.apache.maven.plugins:maven-deploy-plugin:deploy
  					</deploy> 
  				</phases>
  			</configuration>
  		</component>
  		<component>
  		 	<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
  		 	<role-hint>pear</role-hint>
  		 	<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
  		 	<configuration>
  		 		<extension>phar</extension>
  		 		<type>phar</type>
  		 		<packaging>pear</packaging>
  		 		<includesDependencies>false</includesDependencies>
  		 		<language>php</language>
  		 		<addedToClasspath>true</addedToClasspath>
  		 	</configuration>
  		</component>
    </components>
</component-set>