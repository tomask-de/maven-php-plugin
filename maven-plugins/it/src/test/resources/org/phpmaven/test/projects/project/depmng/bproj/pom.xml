<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.github.phpmaven.test</groupId>
    <artifactId>bproj</artifactId>
    <version>0.0.1</version>

    <parent>
    	<groupId>org.github.phpmaven</groupId>
    	<artifactId>php-parent-pom</artifactId>
    	<version>3.0.0-SNAPSHOT</version>
    </parent>
    <packaging>php</packaging>
    
    <dependencies>
    	<dependency>
    		<groupId>org.github.phpmaven.test</groupId>
    		<artifactId>proj1</artifactId>
    		<version>0.0.1</version>
    		<type>phar</type>
    	</dependency>
    </dependencies>
    
    <build>
    	<plugins>
    		<plugin>
    			<groupId>org.github.phpmaven</groupId>
    			<artifactId>maven-php-project</artifactId>
    			<version>${phpmaven.plugin.version}</version>
    			<configuration>
    			</configuration>
    		</plugin>
    		<plugin>
    			<groupId>org.github.phpmaven</groupId>
    			<artifactId>maven-php-dependency</artifactId>
    			<version>${phpmaven.plugin.version}</version>
    			<configuration>
    				<bootstrapFile>${project.basedir}/src/main/bootstrap/bootstrap.php</bootstrapFile>
    				<dependencies>
    					<dependency>
    						<groupId>org.github.phpmaven.test</groupId>
    						<artifactId>proj1</artifactId>
    						<actions>
    							<bootstrap/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.github.phpmaven.test</groupId>
    						<artifactId>lib1</artifactId>
    						<actions>
    							<bootstrap/>
    						</actions>
    					</dependency>
    				</dependencies>
    			</configuration>
    		</plugin>
    	</plugins>
    </build>
</project>