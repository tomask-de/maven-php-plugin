<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <properties>
        <phpmavenTagName>2.0.0-RC1</phpmavenTagName>
        
        <phpmaven.plugin.version>2.0.0-RC1</phpmaven.plugin.version>
        <phpmaven.jettycgi.version>2.0.0-RC1</phpmaven.jettycgi.version>
        <phpmaven.maven-jetty-plugin.version>6.1.10</phpmaven.maven-jetty-plugin.version>
    </properties>

    <parent>
        <groupId>org.phpmaven.build</groupId>
        <artifactId>generic-parent</artifactId>
        <version>2.0.0-RC1</version>
        <relativePath>../generic-parent/pom.xml</relativePath>
    </parent>

    <groupId>org.phpmaven</groupId>
    <artifactId>php-parent-pom</artifactId>
    <version>2.0.0-RC1</version>
    <packaging>pom</packaging>

    <name>php-parent-pom:${project.version}</name>

    <description>
        A Maven plugin for dependency management and quality assurance in PHP projects. Uses
        the default Maven lifecycle to provide multiple php features.
        
        PHP parent pom.
    </description>
    
    <url>${phpmavenRootUrl}/${phpmavenTagType}/${phpmavenTagName}/php-parent-pom/</url>
    
    <distributionManagement>
        <repository>
            <id>upload-${phpmavenReposReleasesId}</id>
            <name>${phpmavenReposReleasesName}</name>
            <url>${phpmavenReposReleasesUploadPhpUrl}</url>
        </repository>
        <snapshotRepository>
            <id>upload-${phpmavenReposSnapshotsId}</id>
            <name>${phpmavenReposSnapshotsName}</name>
            <url>${phpmavenReposSnapshotsUploadPhpUrl}</url>
        </snapshotRepository>
        <site>
            <id>upload-${phpmavenSitesId}</id>
            <name>${phpmavenSitesName}</name>
            <url>${phpmavenSitesUploadUrl}/${phpmavenTagType}/${phpmavenTagName}/maven-parent-pom/</url>
        </site>
    </distributionManagement>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.phpmaven</groupId>
                <artifactId>maven-php-jettycgi</artifactId>
                <version>${phpmaven.jettycgi.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <build>
        <extensions>
            <extension>
                <groupId>org.phpmaven</groupId>
                <artifactId>maven-php-plugin</artifactId>
                <version>${phpmaven.plugin.version}</version>
            </extension>
        </extensions>
    
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-plugin</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-core</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-exec</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-pear</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-phar</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-phpdoc</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-project</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-validate-lint</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.phpmaven</groupId>
                    <artifactId>maven-php-plugin</artifactId>
                    <version>${phpmaven.plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.mortbay.jetty</groupId>
                    <artifactId>maven-jetty-plugin</artifactId>
                    <version>${phpmaven.maven-jetty-plugin.version}</version>
                    <dependencies>
                        <dependency>
                            <groupId>ch.qos.logback</groupId>
                            <artifactId>logback-classic</artifactId>
                            <version>0.9.15</version>
                        </dependency>
                        <dependency>
                            <groupId>org.phpmaven</groupId>
                            <artifactId>maven-php-jettycgi</artifactId>
                            <version>${phpmaven.jettycgi.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
        
        <sourceDirectory>src/main/php</sourceDirectory>
        <testSourceDirectory>src/test/php</testSourceDirectory>
    </build>

</project>
