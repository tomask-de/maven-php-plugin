<?xml version="1.0" encoding="UTF-8"?>

<archetype-descriptor name="maven-phpproject-archetype">
 <fileSets>
    <fileSet filtered="true" packaged="true">
      <directory>src/main/php</directory>
      <includes>
        <include>**/*.php</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>src/main/resources</directory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>src/test/php</directory>
      <includes>
        <include>**/*.php</include>
      </includes>
    </fileSet>
     <fileSet filtered="true" packaged="true">
      <directory>src/site</directory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>

  </fileSets>

</archetype-descriptor>