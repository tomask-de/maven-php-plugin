<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.phpmaven.test</groupId>
    <artifactId>php-empty-pom</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    
    <build>
    	<plugins>
    		<plugin>
    			<groupId>org.phpmaven</groupId>
    			<artifactId>maven-php-dependency</artifactId>
    			<version>2.0.2</version>
    			<configuration>
    				<dependencies>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>classic1</artifactId>
    						<actions>
    							<classic/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>ignore1</artifactId>
    						<actions>
    							<ignore/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>extractDefaults</artifactId>
    						<actions>
    							<extract/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>extractAndIncludeDefaults</artifactId>
    						<actions>
    							<extractAndInclude/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>includeDefaults</artifactId>
    						<actions>
    							<include/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>pear</artifactId>
    						<actions>
    							<pear/>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>extract1</artifactId>
    						<actions>
    							<extract>
    								<pharPath>/some/path</pharPath>
    								<targetPath>${project.build.directory}/somepath</targetPath>
    							</extract>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>extractAndInclude1</artifactId>
    						<actions>
    							<extractAndInclude>
    								<pharPath>/some/path</pharPath>
    								<targetPath>${project.build.directory}/somepath</targetPath>
    								<includePath>/some/other/path</includePath>
    							</extractAndInclude>
    						</actions>
    					</dependency>
    					<dependency>
    						<groupId>org.group1</groupId>
    						<artifactId>include1</artifactId>
    						<actions>
    							<include>
    								<pharPath>/some/path</pharPath>
    							</include>
    						</actions>
    					</dependency>
    				</dependencies>
    			</configuration>
    		</plugin>
    	</plugins>
    </build>

</project>